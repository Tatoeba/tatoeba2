server {
	listen	80;
	server_name	tatoeba.org;

	root	/var/www-prod/webroot/;
	index	index.php index.html;
	charset	utf-8;

	access_log	/var/log/nginx/access.log;
	error_log 	/var/log/nginx/error.log;
	rewrite_log	on;

    #location ~ /$ {
    #    return 301 /home;
    #}

    location / {
        try_files $uri $uri/ /index.php?url=$uri&$args;
    }

	location /exported_files {
		internal;
		alias /var/www-prod/exported_files;
	}


	location ~ \.php {
		try_files $uri =404;
		include /etc/nginx/fastcgi_params;
		fastcgi_pass 127.0.0.1:9000;
		fastcgi_intercept_errors on;
		fastcgi_index index.php;
		fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
	}

	# Comment this out when the subdomain for static files is activated
	location ~ /(img|js|css|cache_(js|css|svg))/ {
		try_files /$uri =404;
	}

	location ~ /(\.ht|\.svn) {
		deny all;
	}
}
